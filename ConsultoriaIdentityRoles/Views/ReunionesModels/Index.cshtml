@model IEnumerable<ConsultoriaIdentityRoles.Models.ReunionesModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        #mainNav {
            background-color: #000000b2;
            position: relative;
        }
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <div class="navbar-brand js-scroll-trigger">
                <span class="icon-terminal"></span>

                @Html.ActionLink("McflyCorps", "index", "Home")

            </div>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <div class="nav-link js-scroll-trigger">
                                <span class="icon-users"></span>
                                @Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link js-scroll-trigger">
                                <span class="icon-user-check"></span>
                                @Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")
                            </div>
                        </li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Desarrrollador"))
                    {
                        <li class="nav-item">
                            <div class="nav-link js-scroll-trigger">
                                <span class="icon-users"></span>
                                @Html.ActionLink("Comunidad", "comunidad", "Home")
                            </div>
                        </li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </nav>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Compania)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Razon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Compania)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Razon)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
